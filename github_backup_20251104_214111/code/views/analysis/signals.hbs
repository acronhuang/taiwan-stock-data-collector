            });
        }

        function filterCards(attribute, value) {
            const cards = document.querySelectorAll('.signal-card');
            
            cards.forEach(card => {
                if (value === 'all' || card.getAttribute(attribute) === value) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
